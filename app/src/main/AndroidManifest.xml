<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stevenkcolin.xiaobaiju" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:parentActivityName=".activity.TaskListActivity" >
        </activity>
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.TaskDetailActivity"
            android:parentActivityName=".activity.TaskListActivity" />
        <activity
            android:name=".activity.TaskListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="xiaobaiju.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.stevenkcolin.xiaobaiju.vo" />

        <activity
            android:name=".activity.xiaobaijuSlidingMenu"
            android:label="@string/title_activity_xiaobaiju_sliding_menu" >
        </activity>
    </application>

</manifest>
